{
	"compilerOptions": {
		"strict": true,
		"target": "ES2022",
		"forceConsistentCasingInFileNames": true,
		// "baseUrl": "./dist",
		"noErrorTruncation": true,
		"checkJs": true,
		"alwaysStrict": true,
		"noEmitOnError": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		// "noUnusedParameters": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"module": "CommonJS",
		"paths": {
			"shared/*": ["../shared/*"]
		}
	}
	// "include": ["/.env"]
}
