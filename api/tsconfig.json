{
	"compilerOptions": {
		"strict": true,
		"target": "es2020",
		"forceConsistentCasingInFileNames": true,
		// "baseUrl": "./dist",
		"noErrorTruncation": true,
		"checkJs": true,
		"moduleResolution": "Node",
		"alwaysStrict": true,
		// "allowSyntheticDefaultImports": true,
		"noEmitOnError": false,
		"outDir": "./dist",
		"esModuleInterop": true,
		// "noUnusedParameters": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"module": "CommonJS",
		"paths": {
			"shared/*": ["../shared/*"]
		}
	}
}
